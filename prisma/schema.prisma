generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters", "views", "relationJoins", "multiSchema"]
  binaryTargets   = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("dbConnectionString")
  schemas  = ["public"]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("public")
}
